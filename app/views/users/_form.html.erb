<%= form_for(@user) do |f| %>
      <%# Check for errors %>
      <% if @user.errors.any? %>
          <%  @user.errors.full_messages.each do |msg| %>
              <%# display error messages %>
              <div class="alert alert-danger"><%= msg%>
          <% end %>
      <% end %>
      <div class="form-group">
          <%= f.text_field :name, class: 'form-control',placeholder: 'Your Name'  %>
      </div>
      <div class="form-group">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email Address' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Passoword' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirm' %>
      </div>

      <%= f.hidden_field :avatar, value: 'https://via.placeholder.com/150' %>

      <div class="form-group">
        <%= f.submit "Submit", class:'btn btn-primary btn-block' %>
      </div>
<% end %> 