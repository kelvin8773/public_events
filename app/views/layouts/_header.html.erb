<header >
 <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
    <a class="navbar-brand navbar-logo" href="#">Public Events</a>
    <% if logged_in? %>
      <div class='navbar-item nav-user-name'><%= current_user.name.capitalize %> </div>
    <% else %>
      <div class='nav-item nav-user-name'>Login to Join the Events!</div>
    <% end %>

    
    <ul class="navbar-nav">
      <li class="nav-item active "><%= link_to "Home", root_path, class: 'nav-link' %></li>

      <% if logged_in? %>
        <li class="nav-item "><%= link_to "Profile", current_user, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "Users", users_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "Sign Out", logout_path, method: :delete, class: 'nav-link' %></li>

      <% else %>
        <li class="nav-item "><%= link_to "Sign In", login_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </nav>
  
</header>